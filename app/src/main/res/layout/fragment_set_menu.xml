<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SetMenuFragment">


    <TextView
        android:id="@+id/setMenuTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setMenu"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/addFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setMenuTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="270dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="30dp"
        android:text="@string/addFood" />

    <TextView
        android:id="@+id/soupCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/addFood"
        android:textSize="20sp"
        android:text="@string/soupList"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/soupList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/soupCategory"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/meatCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/soupList"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/meatList"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/meatList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meatCategory"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/garnishCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meatList"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/garnishList"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/garnishList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/garnishCategory"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/saladCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/garnishList"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/saladList"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saladList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saladCategory"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/dessertCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saladList"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/saladList"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dessertList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dessertCategory"
        android:padding="20dp"/>

</RelativeLayout>